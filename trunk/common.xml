<?xml version="1.0" ?>
<NcvfsConfig>

	<Components>
	
		<MDS>
            <count>1</count>        <!-- do not change -->
			<MDS0>
                <id>50000</id>      <!-- unique component ID -->
                <ip>127.0.0.1</ip>  <!-- MDS IP -->
                <port>50000</port>  <!-- MDS PORT -->
			</MDS0>
		</MDS>
		
		<MONITOR>
            <count>1</count>        <!-- do not change -->
			<MONITOR0>
                <id>53000</id>      <!-- unique component ID -->
                <ip>127.0.0.1</ip>  <!-- MONITOR IP -->
                <port>53000</port>  <!-- MONITOR PORT -->
			</MONITOR0>
		</MONITOR>
				
	</Components>

    <!-- Changing settings below this line is not recommended -->
	
	<Communication>

        <!-- polling interval in terms of us -->
        <SendPollingInterval>1000</SendPollingInterval>
        
        <!-- timeout for select -->
        <SelectTimeout>
            <sec>0</sec>
            <usec>10000</usec>
        </SelectTimeout>
	
		<!-- Chunk Size used in transfer -->
		<ChunkSize>512K</ChunkSize>

		<!-- No of dispatch thread created for each thread pool -->
		<NumThreadPerPool>1</NumThreadPerPool>
	</Communication>
	
</NcvfsConfig>
