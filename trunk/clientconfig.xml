<?xml version="1.0" ?>
<NcvfsConfig>
	<Coding><SegmentNumber>1</SegmentNumber></Coding>
    <Communication>
    
        <!-- polling interval in terms of ms -->
        <SendPollingInterval>100</SendPollingInterval>
        
        <!-- timeout for select -->
        <SelectTimeout>
            <sec>1</sec>
            <usec>0</usec>
        </SelectTimeout>
        
        <ServerPort>51000</ServerPort>
        
    </Communication>
    
    <Storage>
    	<!-- KB -->
    	<ObjectLocation>./client_object/</ObjectLocation>
    	<ObjectSize>10240</ObjectSize>
    </Storage>
</NcvfsConfig>
