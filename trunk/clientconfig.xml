<?xml version="1.0" ?>
<NcvfsConfig>
	<Clientid>51000</Clientid>

    <Communication>
    
        <!-- polling interval in terms of ms -->
        <SendPollingInterval>100</SendPollingInterval>
        
        <!-- timeout for select -->
        <SelectTimeout>
            <sec>1</sec>
            <usec>0</usec>
        </SelectTimeout>
        
        <ServerPort>51000</ServerPort>
        
    </Communication>
    
    <Storage>
    	<!-- KB -->
    	<ObjectSize>10240</ObjectSize>
    </Storage>

	<Fuse>
		<TempStorage>/tmp/</TempStorage>
	</Fuse>
</NcvfsConfig>
