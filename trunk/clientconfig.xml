<?xml version="1.0" ?>
<NcvfsConfig>
    <Communication>
		<NumClientThreads>10</NumClientThreads>
    </Communication>
    
    <Storage>
    	<!-- KB -->
    	<SegmentSize>10240</SegmentSize>
    </Storage>

	<Fuse>
        <segmentSize>10M</segmentSize>
        <writeBufferSize>10</writeBufferSize>
        <numWriteThread>10</numWriteThread>
        <prefetchCount>3</prefetchCount>
        <prefetchBufferSize>10</prefetchBufferSize>
        <numPrefetchThread>10</numPrefetchThread>
        <lruSize>10</lruSize>
        <codingScheme>2</codingScheme>
        <!-- 0 -->
        <RAID0>
            <N>3</N>
        </RAID0>

        <!-- 1 -->
        <RAID1>
            <N>3</N>
        </RAID1>

        <!-- 2 -->
        <RAID5>
            <N>3</N>
        </RAID5>
        
        <!-- 3 -->
        <RS>
            <N>4</N>
            <K>2</K>
            <M>8</M>
        </RS>
        
        <!-- 4 -->
        <EMBR>
            <N>4</N>
            <K>2</K>
            <M>8</M>
        </EMBR>

        <!-- 5 -->
        <RDP>
            <N>6</N>
        </RDP>

        <!-- 6 -->
        <EVENODD>
            <N>7</N>
        </EVENODD>
	</Fuse>
</NcvfsConfig>
